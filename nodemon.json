{
    "restartable": "rs",
    "ignore": [
        ".vscode",
        ".git",
        "node_modules/**/node_modules",
        "src/client",
        "src/public"
    ],
    "verbose": true,
    "execMap": {
        "js": "node --harmony"
    },
    "events": {
        "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
        "src/"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json"
}